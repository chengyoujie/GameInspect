{
    "manifest_version": 3,
    "name": "GameInspect",
    "author": "chengyoujie",
    "version": "1.0.2",
    "description": "H5 游戏通用的检查工具, 支持 egret, Laya, CocosCreator, Cocos2d-js, Pixi及自定义",
    "devtools_page": "index.html",
    "permissions": ["tabs", "storage", "activeTab", "nativeMessaging", "webRequest", "storage","unlimitedStorage", "contextMenus", "clipboardWrite", "cookies"],
    "host_permissions":["<all_urls>"],
    "background":{
        "service_worker":"js/background.js"
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "all_frames": true,
            "match_about_blank":true,
            "match_origin_as_fallback": true,
            "js":[
                "js/content.js"
            ],
            "run_at":"document_idle"
        }
    ],
    "icons": {
        "512": "icon.png"
    },
    "content_security_policy": {
        "script-src": "self wasm-unsafe-eval",
        "object-src": "self", 
        "wasm-unsafe-eval": true
    },
    "web_accessible_resources":
    [
        {
            "resources":["*/*", "*"],
            "matches":["<all_urls>"]
        }
    ]

}